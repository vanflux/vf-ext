{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2022",
    "jsx": "react",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "../@types",
      "./src/typings",
    ]
  }
}
