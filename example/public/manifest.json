{
  "manifest_version": 3,
  "name": "Extension",
  "version": "1.0.0",
  "description": "An extension",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "incognito": "split"
}